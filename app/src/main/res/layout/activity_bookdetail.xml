<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1976D2"
            android:title="Detail Buku"
            android:titleTextColor="#FFFFFF"
            android:elevation="4dp" />

        <ImageView
            android:id="@+id/imgDetailBuku"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_book_placeholder"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvPenulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis Buku"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi buku akan tampil di sini."
            android:textSize="15sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Tersedia"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnPinjamKembalikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pinjam Buku"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
