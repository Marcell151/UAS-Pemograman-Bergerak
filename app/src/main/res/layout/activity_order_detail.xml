<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/layoutStatusHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/info"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStatusEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â³"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menunggu Konfirmasi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #12345"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Pesanan"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvCustomerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembeli: Budi (Mahasiswa)"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvStandInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warung: Kantin Bu Siti"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu: 12 Des 2024, 10:00"
                    android:textColor="@color/text_gray"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Menu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_gray"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Pembayaran"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 50.000"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Metode: CASH"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPaymentProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bukti Pembayaran"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:id="@+id/ivPaymentProof"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="fitCenter"
                    android:background="#F5F5F5"
                    android:padding="40dp"
                    app:tint="@color/text_gray"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnUploadProof"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/info"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvBtnUpload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ðŸ“¤ Upload Bukti Transfer"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnMainAction"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/success"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvBtnMainAction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Action Utama"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSecondaryAction"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/danger"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvBtnSecondaryAction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Batalkan Pesanan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>